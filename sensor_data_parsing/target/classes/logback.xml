<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 로그 출력 설정 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 로그 파일을 저장할 위치 및 설정 -->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 로그 파일 경로 설정 -->
        <file>./sensor_data_parsing/logs/myapp.log</file>
        
        <!-- 파일 롤링 정책 설정 (매일 롤링) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./sensor_data_parsing/logs/myapp-%d{yyyy-MM-dd}.log</fileNamePattern> <!-- 날짜별로 로그 파일을 롤링 -->
            <maxHistory>30</maxHistory> <!-- 최대 보존할 로그 파일 일수 (예: 30일) -->
        </rollingPolicy>

        <!-- 로그 메시지 형식 설정 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 로거 설정 -->
    <root level="INFO">
        <!-- 콘솔 출력 및 파일 출력 둘 다 설정 -->
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>

</configuration>
